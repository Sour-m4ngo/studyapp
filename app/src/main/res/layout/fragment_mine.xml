<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_mine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DC143C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="我的成就"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/biaoti1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:hint="积分："
                android:inputType="number"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/queding"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/biaoti1"
                android:text="查询"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

        <TextView
            android:id="@+id/biaoti2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="距离下一段位："
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />

    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qingtong1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/qingtong2" />

        <TextView
            android:id="@+id/qingtong2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="青铜"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/baiyin1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/baiyin2" />

        <TextView
            android:id="@+id/baiyin2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="白银"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/huangjin1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/huangjin2" />

        <TextView
            android:id="@+id/huangjin2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="黄金"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bojin1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/bojin2" />

        <TextView
            android:id="@+id/bojin2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="铂金"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zuanshi1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/zuanshi2" />

        <TextView
            android:id="@+id/zuanshi2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="钻石"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wangzhe1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/wangzhe2" />

        <TextView
            android:id="@+id/wangzhe2"
            android:layout_width="250dp"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="王者"
            android:textColor="#888888"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

</LinearLayout>